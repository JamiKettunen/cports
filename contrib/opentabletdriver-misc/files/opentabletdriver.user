# flatpak OpenTabletDriver daemon user service

type            = process
command         = /usr/bin/flatpak run --command=/app/bin/OpenTabletDriver.Daemon net.opentabletdriver.OpenTabletDriver
depends-on      = dbus
log-type        = buffer
log-buffer-size = 65536
restart         = true
restart-delay   = 3

